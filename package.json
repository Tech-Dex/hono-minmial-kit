{
  "name": "deno-hono-minimal-boilerplate",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "start": "tsx --env-file=.env src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "check": "tsc --noEmit",
    "build": "rm -rf dist && tsc && mkdir -p dist/src/lib/mail-templates && cp -r src/lib/mail-templates dist/lib/mail-templates",
    "production": "node --env-file=envs/.env dist/index.js",
    "gen:secret": "openssl rand -hex 32",
    "prepare:commit": "pnpm run check && prettier --write . && eslint src --ext .ts --fix ",
    "db:mgrt:initial": "pnpm exec mikro-orm-esm migration:create --initial",
    "db:mgrt:create": "pnpm exec mikro-orm-esm migration:create",
    "db:mgrt:up": "pnpm exec mikro-orm-esm migration:up",
    "db:mgrt:down": "pnpm exec mikro-orm-esm migration:down",
    "db:mgrt:list": "pnpm exec mikro-orm-esm migration:list",
    "db:mgrt:check": "pnpm exec mikro-orm-esm migration:check",
    "db:mgrt:pending": "pnpm exec mikro-orm-esm migration:pending",
    "db:mgrt:fresh": "pnpm exec mikro-orm-esm migration:fresh",
    "db:seed:create": "pnpm exec mikro-orm-esm seeder:create",
    "db:seed:run": "pnpm exec mikro-orm-esm seeder:run",
    "db:seed:fresh": "pnpm exec mikro-orm-esm migration:fresh --seed",
    "docker:dev:up": "docker compose -f dev.docker-compose.yml -p management-app up --build -d",
    "docker:dev:down": "docker compose -p management-app down",
    "docker:dev:logs": "docker compose -p management-app logs"
  },
  "dependencies": {
    "@hono/eslint-config": "1.1.1",
    "@hono/node-server": "1.14.1",
    "@hono/zod-validator": "0.4.3",
    "@mikro-orm/cli": "6.4.14",
    "@mikro-orm/core": "6.4.14",
    "@mikro-orm/migrations": "6.4.14",
    "@mikro-orm/postgresql": "6.4.14",
    "@mikro-orm/reflection": "6.4.14",
    "@mikro-orm/seeder": "6.4.14",
    "@scalar/hono-api-reference": "0.8.8",
    "chalk": "5.4.1",
    "class-validator": "0.14.2",
    "cron": "4.3.0",
    "hono": "4.7.8",
    "hono-openapi": "0.4.6",
    "http-status-codes": "2.3.0",
    "mjml": "4.15.3",
    "nodemailer": "7.0.2",
    "nunjucks": "3.2.4",
    "zod": "3.24.4",
    "zod-openapi": "4.2.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/mjml": "4.7.4",
    "@types/node": "20.11.17",
    "@types/nodemailer": "6.4.17",
    "@types/nunjucks": "3.2.6",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "tsx": "4.7.1"
  },
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b"
}
